<% include ./partials/header %>


<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<!-- Implementation du PUT request -->
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
	<div class="field">
		<label>Blog Title</label>
		<input type="text" name="blog[title]" value="<%= blog.title %>">
	</div>
	<div class="field">
		<label>Link image</label>
		<input type="text" name="blog[image]" value="<%= blog.image %>">
	</div>
	<div class="field">
		<label>Insert your comment</label>
		<textarea name="blog[body]"><%= blog.body %></textarea>
	</div>
		<input class="ui orange inverted big button" type="submit" value="Update">
	</form>
</div>

<% include ./partials/footer %>